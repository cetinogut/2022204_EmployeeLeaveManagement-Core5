@model EmployeeLeaveTypeVM

@{
    ViewData["Title"] = "Add Leave Type";
}

<form class="form-horizontal" asp-action="Create">
    <div ASP-asp-validation-summary="ModelOnly" class="text-danger"></div>
   @* <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Text Field </label>

        <div class="col-sm-9">
            <input type="text" id="form-field-1" placeholder="Username" class="col-xs-10 col-sm-5" />
        </div>
    </div>*@
   
    <div class="space-4"></div>

    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-asp-for="Name">Leave Type</label>

        <div class="col-sm-9">
            <input data-rel="tooltip" type="text" asp-for="Name" placeholder="enter leave type name" title="Enter leave type" data-placement="bottom" class="col-xs-10 col-sm-5" />
            <span class="help-button" data-rel="popover" data-trigger="hover" data-placement="left" data-content="More details." title="Popover on hover">?</span>
            <span asp-validation-for="Name"></span>
        </div>

    </div>

    <div class="space-4"></div>

    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-asp-for="DefaultDays">Default Days</label>

        <div class="col-sm-9 ">
            <input data-rel="tooltip" type="number" min="0" max="31" asp-for="DefaultDays" placeholder="default # of days" title="Enter default days" data-placement="bottom" class="col-xs-10 col-sm-5" />
            <span class="help-button" data-rel="popover" data-trigger="hover" data-placement="left" data-content="More details." title="Popover on hover">?</span>
            <span asp-validation-for="DefaultDays"></span>
        </div>

    </div>

    <div class="clearfix form-actions">

        <div class="col-md-offset-4 col-md-9 ">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110" ></i>
                Submit
            </button>

            @* <a asp-controller="EmployeeLeaveType" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New</a>     *@
       
           @* <input type="submit"  value="Create" class="btn btn-info"/>*@

            &nbsp; &nbsp; &nbsp;
            <button class="btn" type="reset">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>

    <div class="hr hr-24"></div>

</form>

@section   Scripts {
    <partial name="_ValidationScriptsPartial" />
}

